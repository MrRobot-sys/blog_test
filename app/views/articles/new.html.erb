<h1>Article</h1>

<%= form_with model: @article do |form|%>

  <div>
    <%= form.label :name %></br>
    <%= form.text_field :name %>
    <% @article.errors.full_messages_for(:name).each do |message| %>
      <div><% message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %></br>
    <%= form.text_area :body %>
    <% @article.errors.full_messages_for(:body).each do |message| %>
      <div>error - <% message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>