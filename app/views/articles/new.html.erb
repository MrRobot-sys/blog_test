<h1>Article</h1>

<%= form_with model: @article do |form|%>

  <div>
    <%= form.label :name %></br>
    <%= form.text_field :name %>"
    <% @article&.errors&.full_messages.each do |message| %>
      <div><% message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %></br>
    <%= form.text_area :body %>
    <% @article&.errors&.full_messages.each do |message| %>
      <div><% message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>